{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "outDir": "../dist/server",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "../firebase-adminsdk.json", "src/types/**/*.d.ts"]
}
